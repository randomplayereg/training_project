<%= form_with model: @article do |f| %>

  <% if @article.errors.any? %>
    <h2>Invalid input: </h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>


  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>
<% end %>
